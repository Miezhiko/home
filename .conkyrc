conky.config = {
  own_window = true,
  own_window_transparent = true,
  own_window_type = 'normal',
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
  own_window_argb_visual = true,
  own_window_argb_value = 0,
  out_to_console = false,
  use_xft = true,
  font = 'Cantarell:size=11',
  update_interval = 2,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  double_buffer = true,
  maximum_width = 320,
  draw_shades = false,
  draw_outline = false,
  draw_borders = false,
  stippled_borders = 1,
  border_width = 10,
  default_color = '#F5F5F5',
  default_shade_color = 'grey',
  default_outline_color = 'grey',
  alignment = 'top_right',
  gap_x = 10,
  gap_y = 10,
  use_spacer = 'left',
  no_buffers = true,
  uppercase = false
}

conky.text = [[
